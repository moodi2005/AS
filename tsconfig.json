{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": false,
    "importHelpers": true,
    "inlineSources": false,
    "strict": true,
    "outDir": "./dist",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "allowJs": true,
    "maxNodeModuleJsDepth": 2
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*/*",
    "server"
  ]
}